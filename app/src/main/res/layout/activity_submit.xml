<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/actv_upload"
        android:layout_height="match_parent">

    <Button
            android:id="@+id/btn_uploadimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload"
            android:onClick="uploadImage"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/buttonshapecollor"
            android:layout_marginBottom="124dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_return"
    />

    <Button
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_return"
            android:text="@string/btn_return"
            android:layout_marginBottom="124dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/btn_uploadimage" android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/buttonshapecollor"
            android:onClick="backScreen" android:layout_marginTop="379dp"
            app:layout_constraintTop_toBottomOf="@+id/textComment"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text|textMultiLine"
            android:ems="10"
            android:id="@+id/textComment" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="252dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_uploadimage" app:layout_constraintHorizontal_bias="0.0"
            android:hint="@string/comment" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>


</android.support.constraint.ConstraintLayout>