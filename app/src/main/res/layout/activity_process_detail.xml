            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/tvNOpositor"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.42"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNOpositor" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="116dp"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/tvNameClient"/>
    <TextView
            android:text="Número do Processo: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/tvNumProc"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.536"/>
