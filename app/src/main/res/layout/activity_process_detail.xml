            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:id="@+id/tvNumProc" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNOpositor" app:layout_constraintEnd_toEndOf="parent"
