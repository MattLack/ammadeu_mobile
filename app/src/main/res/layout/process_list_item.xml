<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
android:orientation="horizontal"
android:padding="8dp"
android:layout_gravity="end">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:orientation="vertical"
            android:layout_gravity="start"
            android:gravity="start">

        <TextView
                android:id="@+id/client_vs_opositor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:text="Cliente x opositor"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/process_number"
                      android:text="Número do processo"
                      android:layout_margin="5dp"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/publication_date"
                      android:layout_gravity="end|center"
                      android:text="Data Publicação"
                      android:layout_margin="5dp"/>


        </LinearLayout>


    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0"
              android:gravity="end"
              android:textSize="30sp"
              android:paddingEnd="17dp"
              android:paddingStart="17dp"
              android:textAlignment="center"
              android:layout_gravity="center"
              android:padding="13dp"
              android:text="2"
              android:background="@drawable/button_shape_round"
    />




</LinearLayout>