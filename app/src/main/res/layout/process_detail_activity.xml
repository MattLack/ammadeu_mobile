<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView
                android:text="Nome do Cliente: "
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:id="@+id/textView4"
                android:layout_marginStart="52dp"
                android:layout_marginTop="36dp"
        />
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNameClient"
                android:layout_marginStart="8dp"
                android:layout_marginTop="36dp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView
                android:text="Nome do Opositor: "
                android:layout_width="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" android:layout_marginTop="20dp"
        />
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNOpositor"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp" />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView
                android:text="Número do Processo: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" android:layout_marginTop="20dp"
                android:layout_marginStart="52dp"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="8dp"
                android:id="@+id/tvNumProc" android:layout_marginTop="20dp"
                />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView
                android:text="Grau de Prioridade: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:id="@+id/textView12" android:layout_marginTop="20dp"
                 />


        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:id="@+id/tvGrPriorit" android:layout_marginTop="20dp"
               />

    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView
                android:text="Dias de Prazo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/textView16"
                android:gravity="center"
                android:layout_marginTop="52dp"
                android:layout_marginStart="52dp"
        />


        <TextView android:layout_width="85dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="5"
                  android:gravity="end"
                  android:textSize="30sp"
                  android:paddingEnd="17dp"
                  android:paddingStart="17dp"
                  android:id="@+id/tvdays_ramaining"
                  android:textAlignment="center"
                  android:layout_gravity="center"
                  android:padding="13dp"
                  android:text="2"
                  android:background="@drawable/button_shape_round"
                  android:layout_marginTop="10dp"
                   android:layout_marginEnd="10dp"
                 />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView
                android:text="Data da Publicação: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:layout_marginStart="52dp"
                android:layout_marginTop="20dp"
               />

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPublicationDate"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                />


    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView
                android:text="Discriminação:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="52dp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:id="@+id/tvDiscrimination"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:textAlignment="viewStart"/>


    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView
                android:text="Observações:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView19" android:layout_marginTop="20dp"
                android:layout_marginStart="52dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="8dp"
                />

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTasks" android:layout_marginTop="20dp"
                android:layout_marginStart="8dp"
                />


    </LinearLayout>

</LinearLayout>