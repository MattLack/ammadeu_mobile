<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        tools:context=".MainActivity">

    <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="357dp"
            android:layout_height="111dp"
            android:background="@drawable/logorename"
            tools:ignore="MissingConstraints"
            android:id="@+id/linearLayoutCompat2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnmainsign">

    </android.support.v7.widget.LinearLayoutCompat>
    <Button
            android:text="@string/btn_cadastr"
            android:textColor="#5555ff"
            android:background="@null"
            android:layout_width="146dp"
            android:layout_height="58dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btnmainsign"
            android:textSize="18sp"
            android:onClick="goToSignUpActvity" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.595"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnmainlogin" android:layout_marginStart="1dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat2"/>
    <Button
            android:text="@string/btnlogin"
            android:layout_width="146dp"
            android:layout_height="58dp"
            android:textColor="#5555ff"
            android:background="@null"
            android:onClick="gotoLoginActivity"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat2"
            app:layout_constraintVertical_bias="0.512"
            android:id="@+id/btnmainlogin" tools:ignore="OnClick"
            app:layout_constraintEnd_toStartOf="@+id/btnmainsign" android:layout_marginEnd="1dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>


</android.support.constraint.ConstraintLayout>